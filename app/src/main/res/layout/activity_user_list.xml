<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:clickable="true"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/top_control_bar"
		android:layout_width="fill_parent"
		android:layout_height="35dip"
		android:background="@color/grey_light"
		android:visibility="gone" >
		<LinearLayout
			android:id="@+id/fdLinearLayoutMenu"
			android:layout_width="fill_parent"
			android:layout_height="35dip"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingLeft="0dip"
			android:visibility="gone" >

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.65" >

				<TextView
					android:id="@+id/txtUserTitle"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="left|center_vertical"
					android:layout_weight="0.93"
					android:gravity="fill_vertical"
					android:textColor="@color/Blue"
					android:textSize="14dip" />
			</LinearLayout>

			<ImageButton
				android:id="@+id/btnSearch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:src="@drawable/search_32" />

			<ImageButton
				android:id="@+id/btnSearchItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:src="@drawable/searchitem"
				android:visibility="gone"
				/>

			<ImageButton
				android:id="@+id/btnSortList"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:src="@drawable/sort_list_small"
				android:visibility="gone"
				/>

			<ImageButton
				android:id="@+id/btnSortAsc"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="2dp"
				android:scaleType="center"
				android:src="@drawable/sort_asc" />

			<ImageButton
				android:id="@+id/btnSortDesc"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="2dp"
				android:src="@drawable/sort_des" />

		</LinearLayout>
		<LinearLayout
			android:id="@+id/fdLinearLayoutSearch"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="visible" >
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:clickable="true"
				android:gravity="center_horizontal"
				android:orientation="vertical" >
				<SearchView
					android:id="@+id/search"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:layout_gravity="left"
					android:layout_toLeftOf="@+id/btnSearchCancel"
					android:iconifiedByDefault="false"
					android:paddingRight="40dp" />

				<ImageButton
					android:id="@+id/btnSearchCancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true"
					android:src="@drawable/delete_black"
					android:visibility="gone"
					/>

			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
	<EditText
		android:id="@+id/txtFilterText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:hint="nhập để lọc dữ liệu"
		android:cursorVisible="false"
		android:inputType="text"
		android:maxLines="1"
		/>
	<ListView
		android:id="@+id/list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/bottom_control_bar"
		android:layout_below="@+id/txtFilterText"
		android:layout_weight="1"
		android:divider="#b5b5b5"
		android:dividerHeight="2dp"
		android:hardwareAccelerated="true" />
	<RelativeLayout
		android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:layout_weight="1"
		android:background="#455A64"
		android:gravity="center"
		android:visibility="gone"
		>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#455A64"
			android:gravity="center"
			>
			<!-- Row 1 with 4 columns -->

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:dividerPadding="1dp"
				android:gravity="center_horizontal"
				android:showDividers="beginning|middle|end" >

				<ImageButton
					android:id="@+id/btnSelectAll"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="centerInside"
					android:src="@drawable/checked_checkbox"

					/>

				<ImageButton
					android:id="@+id/btnSchedule_button"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/unchecked_checkbox" />

				<ImageButton
					android:id="@+id/btnCancel_button"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/remove_user" />

				<ImageButton
					android:id="@+id/btnUnDeleteAll"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/change_user" />

				<ImageButton
					android:id="@+id/btnSendMail"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/aiga_mail_48"
					android:visibility="visible" />

				<ImageButton
					android:id="@+id/btnBack"
					style="?android:attr/buttonStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/sms48" />

			</TableRow>
		</TableLayout>
	</RelativeLayout>
	<!--<com.nightonke.boommenu.BoomMenuButton
		android:id="@+id/bmb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		app:bmb_normalColor="@color/colorAccent"
		/>-->
	<com.github.clans.fab.FloatingActionMenu
		android:id="@+id/material_design_android_floating_action_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="11dp"
		android:layout_marginLeft="11dp"
		android:layout_marginRight="11dp"
		app:menu_animationDelayPerItem="55"
		app:menu_backgroundColor="@android:color/transparent"
		app:menu_buttonSpacing="0dp"
		app:menu_colorNormal="#da3c2f"
		app:menu_colorPressed="#dc4b3f"
		app:menu_colorRipple="#99d4d4d4"
		app:menu_fab_label=""
		app:menu_fab_size="normal"
		app:menu_icon="@drawable/fab_add"
		app:menu_labels_colorNormal="#333"
		app:menu_labels_colorPressed="#444"
		app:menu_labels_colorRipple="#66efecec"
		app:menu_labels_cornerRadius="3dp"
		app:menu_labels_ellipsize="none"
		app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
		app:menu_labels_margin="0dp"
		app:menu_labels_maxLines="-1"
		app:menu_labels_padding="8dp"
		app:menu_labels_position="left"
		app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
		app:menu_labels_showShadow="true"
		app:menu_labels_singleLine="false"
		app:menu_labels_textColor="#f2f1f1"
		app:menu_labels_textSize="15sp"
		app:menu_openDirection="up"
		app:menu_shadowColor="#66aff198"
		app:menu_shadowRadius="4dp"
		app:menu_shadowXOffset="1dp"
		app:menu_shadowYOffset="4dp"
		app:menu_showShadow="true">

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_check_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_check_box_white_24dp"
			app:fab_label=""
			app:fab_size="mini" />

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_uncheck_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_check_box_outline_blank_white_24dp"
			app:fab_label=""
			app:fab_size="mini" />

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/account_minus"
			app:fab_label=""
			app:fab_size="mini" />
		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_undelete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/account_switch"
			app:fab_label=""
			app:fab_size="mini" />
		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_send_email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_mail_outline_white_24dp"
			app:fab_label=""
			app:fab_size="mini" />
		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_menu_list_user_send_sms"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_message_white_24dp"
			app:fab_label=""
			app:fab_size="mini" />
	</com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>