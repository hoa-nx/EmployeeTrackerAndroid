<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
	android:id="@+id/new_entry_icons_grid"
    >    		
	<!-- department and team button -->
	<LinearLayout
	    android:id="@+id/main_department_team"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:layout_marginBottom="20dp"
   		android:gravity="center"
   		>
		<Button
		    android:id="@+id/main_deparment"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="60dp"
		    android:background="@drawable/department" />
  		    
 		<Button
   		    android:id="@+id/main_team"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:background="@drawable/users_group" 
   		    android:layout_marginLeft="60dp" />
 	</LinearLayout>
 		
	<!-- user and position button -->

	<LinearLayout
	    android:id="@+id/main_user_position"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/main_position"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:background="@drawable/position" />

	    <Button
	        android:id="@+id/main_user_add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:background="@drawable/add_user_new" />

	</LinearLayout>
	
	<!-- list user and statistic button -->
	<LinearLayout
	    android:id="@+id/main_listuser_chart"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp"
	    android:gravity="center" >
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">
	    <Button
	        android:id="@+id/main_listuser"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:background="@drawable/user_list"
	        android:typeface="normal" />
			<TextView
				android:id="@+id/txt_main_listuser_badge_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/main_listuser"
				android:layout_alignRight="@id/main_listuser"
				android:text="10"
				android:textColor="#FFF"
				android:textSize="16sp"
				android:textStyle="bold"
				android:background="@drawable/badge_circle_button"/>
		</RelativeLayout>
	    <Button
	        android:id="@+id/main_report"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:background="@drawable/reports"
	        android:textStyle="bold"
	        android:typeface="normal" />

	</LinearLayout>
	<!-- restore and backup button -->
	<LinearLayout
	    android:id="@+id/main_backup_restore"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/main_master_data"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:background="@drawable/messages2" />

	    <Button
	        android:id="@+id/main_expandable"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:background="@drawable/expandable_list" />

	</LinearLayout>
	<!-- config button -->

	<LinearLayout
	    android:id="@+id/main_history"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginBottom="20dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/main_history_department"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:background="@drawable/history_position" />

	    <Button
	        android:id="@+id/main_chart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:background="@drawable/chart" />
	    
	</LinearLayout>
	<!-- config button -->
	<LinearLayout
	    android:id="@+id/main_config_none"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginBottom="20dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/main_notification"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:background="@drawable/whatsnext" />

	    <Button
	        android:id="@+id/main_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:background="@drawable/contacts" />
	    
	</LinearLayout>
	
</LinearLayout>